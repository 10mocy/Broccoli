---
import dayjs from "dayjs";

export interface Props {
  slug: string;
  title: string;
  date: Date;
}

const props = Astro.props;
---

<a href={`/posts/${props.slug}`} class="card">
  <div class="card_title">
    {props.title}
  </div>
  <div class="card_meta">
    {dayjs(props.date).format("YYYY年 M月 D日")}
  </div>
</a>

<style lang="scss">
  .card {
    padding: 10px;
    text-decoration: none;
    color: #000000;
    background-color: var(--bgwhite-color);

    &_title {
      font-weight: bold;
      transition:
        color 0.2s,
        font-size 0.5s ease;
    }

    position: relative;

    z-index: 0;

    &::before {
      position: absolute;

      content: "";
      width: 0%;
      height: 100%;
      top: 0;
      left: 0;
      background-color: var(--primary-brand-color);
      z-index: -5;
    }

    &::after {
      position: absolute;
      content: "";
      width: 0%;
      height: 100%;
      top: 0;
      left: 0;
      opacity: 20%;
      background-color: var(--primary-brand-color);
      transition: width 0.5s ease;
      z-index: -10;
    }

    &:hover {
      & .card_title {
        color: var(--primary-brand-color);
        font-size: 1.1em;
      }
      &::after {
        width: 100%;
      }
    }
  }
</style>
